<Window x:Class="Bankrekening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bankrekening"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF363636">
        <StackPanel HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="100">
            <Button x:Name="btnRekeningen" Content="Rekeningen" Height="40" Background="{x:Null}" BorderBrush="#FFABADB3" Click="btnRekeningen_Click" Foreground="White"/>
            <Button x:Name="btnKlanten" Content="Klanten" Height="40" Background="{x:Null}" BorderBrush="#FFABADB3" Click="btnKlanten_Click" Foreground="White"/>
            <Button x:Name="btnTypes" Content="Types" Height="40" Background="{x:Null}" BorderBrush="#FFABADB3" Click="btnTypes_Click" Foreground="White"/>
        </StackPanel>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="399" Margin="105,10,0,0" VerticalAlignment="Top" Width="677"/>
    </Grid>
</Window>
